{
  "name": "Mopidy Beta",
  "version": "1.0.0",
  "slug": "mopidy-beta",
  "description": "Mopidy Beta music server",
  "url": "https://github.com/assada/hassio-addons/tree/master/mopidy-beta",
  "startup": "application",
  "boot": "auto",
  "image": "assada/mopidy-beta-{arch}",
  "arch": [
    "armhf"
  ],
  "audio": true,
  "options": {
    "local_scan": true,
    "mount": {
      "enabled": false,
      "disk": "/devices/sda1",
      "filesystem": "auto",
      "point": "/share/storage"
    },
    "telegram": {
      "enabled": false,
      "token": "",
      "admin": "userName",
      "destination": "/share/storage/telegram"
    },
    "options": []
  },
  "schema": {
    "local_scan": "bool?",
    "mount": {
      "enabled": "bool?",
      "disk": "str?",
      "filesystem": "str?",
      "point": "str?"
    },
    "telegram": {
      "enabled": "bool?",
      "token": "str?",
      "admin": "str?",
      "destination": "str?"
    },
    "options": [
      {
        "name": "str",
        "value": "str"
      }
    ]
  },
  "devices": [
    "/dev/snd:/dev/snd:rwm",
    "/dev/:/devices/:rwm"
  ],
  "ports": {
    "6680/tcp": 6680,
    "6600/tcp": 6600
  },
  "map": [
    "share:rw"
  ],
  "webui": "http://[HOST]:[PORT:6680]",
  "host_ipc": true,
  "apparmor": false,
  "privileged": [
    "SYS_ADMIN"
  ]
}
